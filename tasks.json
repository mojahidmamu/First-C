{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "g++ build active file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task by Debugger"
      },
      {
        "label": "run active file",
        "type": "shell",
        "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
 }
 